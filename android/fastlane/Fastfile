lane :build do
  short_commit_hash = ENV['SHORT_COMMIT_HASH']
  flutter_build(
    build: 'apk',
    project_dir: '..',
    output_name: "romrom-#{short_commit_hash}.apk"
  )
end

def flutter_build(options)
  sh(
    "flutter",
    "build",
    options[:build],
    "--release",
    "--no-tree-shake-icons",
    "--target-platform=android-arm64",
    "-v"
  )
  sh("ls", "-la", "../build/app/outputs/apk/release/") # 디버깅용
  sh("mv", "../build/app/outputs/apk/release/app-release.apk", "app/build/outputs/apk/release/#{options[:output_name]}")
end